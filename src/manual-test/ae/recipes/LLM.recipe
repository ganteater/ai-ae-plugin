<Recipe name="LLM">
	<About>
		<description>Example recipe demonstrating use of the Extern LLM processor with multiple commands for prompt, completion, and output.</description> 
	</About> 
	<Extern class="LLM" apiKey="$var{OPENAI_API_KEY}">
		<Prompt name="responseText" model="gpt-4">Write a short poem about the beauty of nature.</Prompt> 
		<Out name="responseText" level="info" /> 
	</Extern> 
</Recipe> 
